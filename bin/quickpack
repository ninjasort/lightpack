#!/usr/bin/env node

const path = require('path')
const fs = require('fs')

const fileData = `
import quickpack from 'quickpack'

const config = quickpack({}, process.env.NODE_ENV)

module.exports = config
`

console.log('Creating webpack.config.js...')

fs.writeFile(
  path.resolve(process.cwd(), 'webpack.config.js'),
  fileData,
  'utf-8',
  (err) => {
    if (err) throw new Error(err)
    console.log('webpack.config.js created. ğŸ‘')
  }
)